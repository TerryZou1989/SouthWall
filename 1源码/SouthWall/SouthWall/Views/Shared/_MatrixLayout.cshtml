@{
    var controller = this.Context.Request.RouteValues["controller"].ToString().ToLower();
    var action = this.Context.Request.RouteValues["action"].ToString().ToLower();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="referrer" content="no-referrer" />
    <link rel="shortcut icon" href="~/favicon.jpg" type="image/x-icon" />
    <title>@ViewData["Title"] - @(Config.SiteName)</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SouthWall.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-cookie/jquery.cookie.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/apis.js" asp-append-version="true"></script>
    <script>
        $(function(){
            com.SetIISRoot("matrix");
            com.CheckLoginStatus();
        });
    </script>
</head>
<body class="bg-black">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom border-secondary box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Matrix" asp-action="Index">编城的内阁</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(action=="times"?"text-light":"text-tz-gray")" asp-area="" asp-controller="Matrix" asp-action="Times">逸趣阁‌</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(action=="videos"?"text-light":"text-tz-gray")" asp-area="" asp-controller="Matrix" asp-action="Videos">光影阁</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(action=="articles"?"text-light":"text-tz-gray")" asp-area="" asp-controller="Matrix" asp-action="Articles">文韵阁‌</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(action=="audios"?"text-light":"text-tz-gray")" asp-area="" asp-controller="Matrix" asp-action="Audios">天籁阁‌</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(action=="messages"?"text-light":"text-tz-gray")" asp-area="" asp-controller="Matrix" asp-action="Messages">‌絮语阁‌</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(action=="websites"?"text-light":"text-tz-gray")" asp-area="" asp-controller="Matrix" asp-action="WebSites">梦链阁</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(action=="shijus"?"text-light":"text-tz-gray")" asp-area="" asp-controller="Matrix" asp-action="ShiJus">诗词辞典</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(action=="touxiangs"?"text-light":"text-tz-gray")" asp-area="" asp-controller="Matrix" asp-action="TouXiangs">头像相册</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div id="pagebody" class="container">
        <main role="main" class="py-3 clearfix h-100 position-relative">
            <h5 class="text-light px-2 pb-2 fw-bold border-bottom border-1 border-secondary mb-3">@(ViewData["Title"])</h5>
            <button id="btnCreate" class="btn btn-primary position-absolute end-0" style="top:0.5rem">增加</button>            
            <div style="height:calc(100% - 50px)" class=" overflow-auto pe-2">
                @RenderBody()
            </div>
        </main>
    </div>

    @await Html.PartialAsync("Footer")
    <script>
        $("#pagebody").height($(window).height() - 117);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
